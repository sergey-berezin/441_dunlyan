                </Grid>
            </TabItem>

        </TabControl>
        <Button Name="btn_Post" Content="Post to server" HorizontalAlignment="Left" Margin="279,10,0,0" Width="120" Click="btn_Post_Click" Grid.Row="1" Grid.Column="2" Height="62" VerticalAlignment="Top"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Height="62" Margin="279,110,0,0" VerticalAlignment="Top" Width="120" Click="Button_Cancel_Click" Grid.Row="1" Grid.Column="2"/>
        <Button Name="btn_Clear" Content="Clear all data" Margin="279,0,0,0" Click="btn_Clear_Click" HorizontalAlignment="Left" Width="120" Height="62" VerticalAlignment="Top" Grid.Column="2" Grid.Row="3"/>
        <ProgressBar  Name="ProgressBar_1" HorizontalAlignment="Left" Height="24" Margin="207,289,0,0" VerticalAlignment="Top" Width="477"  ValueChanged="ProgressBar_ValueChanged" Grid.Row="3" Grid.ColumnSpan="3" Minimum="0" Maximum="100"/>

        <TextBlock Name="analysis_Progress" HorizontalAlignment="Left" Margin="10,293,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="215" FontSize="15"><Run Text="Current analysis progress"/><Run Language="zh-cn" Text=":"/></TextBlock>

    </Grid>
</Window>
