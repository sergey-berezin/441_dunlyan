            <TabItem Header="neutral" Height="60" Width="90">
                <Grid Margin="-8,0,8,0">

                    <ListView Name="list_View_neutral" ItemsSource="{Binding}" ItemTemplate="{StaticResource ItemTemplate1}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="10,0,19,274">
                        <ListView.ItemsPanel>
